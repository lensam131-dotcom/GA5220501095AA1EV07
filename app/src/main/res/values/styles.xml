<resources>

    <!-- Estilo general para TextViews -->
    <style name="EstiloTextoTitulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">30dp</item>
        <item name="android:textColor">#40AAE7</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Estilo general para EditTexts -->
    <style name="EstiloCampoTexto">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="StylePassword">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- Estilo para Botones -->
    <style name="EstiloBotonPrincipal" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#E9168916</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="EstiloCajaPadre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/caja_padre</item>
    </style>

</resources>
